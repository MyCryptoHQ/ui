{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "inlineSources": true,
  "inlineSourceMap": true
}
