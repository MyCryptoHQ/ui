{
  "name": "@mycrypto/ui",
  "version": "0.6.0",
  "description": "The shared UI component library used across all MyCrypto products.",
  "repository": "MyCryptoHQ/ui",
  "keywords": [
    "react",
    "react-component"
  ],
  "author": "MyCrypto",
  "license": "MIT",
  "module": "dist/index.js",
  "types": "dist/index.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "ethereum-blockies-base64": "^1.0.2",
    "polished": "^2.2.0",
    "react-inlinesvg": "^0.8.3",
    "typeface-lato": "^0.0.54"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@emotion/core": "^0.13.1",
    "@storybook/addon-a11y": "^4.0.0",
    "@storybook/addon-info": "^4.0.0",
    "@storybook/addon-options": "^4.0.0",
    "@storybook/addons": "^4.0.0",
    "@storybook/react": "^4.0.0",
    "@types/faker": "^4.1.4",
    "@types/jest": "^23.3.2",
    "@types/react": "^16.4.18",
    "@types/storybook__addon-info": "^3.4.2",
    "@types/storybook__addon-options": "^3.2.2",
    "@types/storybook__react": "^3.0.9",
    "@types/styled-components": "^4.0.2",
    "babel-loader": "^8.0.4",
    "coveralls": "^3.0.2",
    "eslint": "^5.6.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "faker": "^4.1.0",
    "gulp": "^3.9.1",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "jest-dom": "^2.0.5",
    "lint-staged": "^7.2.2",
    "mycrypto-path-alias-resolver": "^1.0.5-alpha",
    "prettier": "^1.14.2",
    "react": "^16.5.0",
    "react-docgen-typescript-loader": "^3.0.0",
    "react-dom": "^16.5.0",
    "react-testing-library": "^5.0.1",
    "rollup": "^0.66.1",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.17.0",
    "rollup-plugin-url": "^2.0.1",
    "storybook-addon-styled-component-theme": "^1.0.5",
    "styled-components": "^4.0.2",
    "stylelint": "^9.5.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.2",
    "ts-jest": "^23.1.4",
    "ts-loader": "^5.2.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.1",
    "typescript-eslint-parser": "^20.0.0",
    "webpack": "^3.0.0"
  },
  "peerDependencies": {
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "styled-components": "^4.0.2"
  },
  "scripts": {
    "build": "build-storybook",
    "prepare": "rollup -c && gulp",
    "report-coverage": " cat ./coverage/lcov.info | coveralls",
    "start": "start-storybook",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "plugin:jsx-a11y/recommended",
    "parser": "typescript-eslint-parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "jsx-a11y",
      "react"
    ],
    "rules": {
      "react/destructuring-assignment": "error",
      "jsx-a11y/label-has-for": [
        "error",
        {
          "required": "id"
        }
      ]
    }
  },
  "jest": {
    "collectCoverage": true,
    "moduleNameMapper": {
      "\\.svg$": "<rootDir>/__mocks__/fileMock.ts",
      "^src/(.*)$": "<rootDir>/src/$1"
    },
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "dist"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && tsc --noEmit && yarn test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --ext js,jsx,ts,tsx",
      "stylelint",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "useTabs": false,
    "semi": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "stylelint": {
    "processors": "stylelint-processor-styled-components",
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-styled-components",
      "stylelint-config-prettier"
    ],
    "rules": {
      "block-no-empty": false,
      "color-named": "always-where-possible",
      "declaration-no-important": true,
      "font-family-name-quotes": "always-where-recommended",
      "font-weight-notation": "named-where-possible",
      "max-nesting-depth": 1,
      "unit-whitelist": [
        "%",
        "em"
      ]
    }
  }
}
