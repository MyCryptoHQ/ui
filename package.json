{
  "name": "@mycrypto/ui",
  "version": "0.21.0",
  "description": "The shared UI component library used across all MyCrypto products.",
  "repository": "MyCryptoHQ/ui",
  "keywords": [
    "react",
    "react-component"
  ],
  "author": "MyCrypto",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "types": "dist/es/index.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@types/dom-clipboard-api": "^1.0.1",
    "@types/lodash.throttle": "^4.1.4",
    "@types/react-inlinesvg": "^0.8.1",
    "ethereum-blockies-base64": "^1.0.2",
    "lodash.throttle": "^4.1.1",
    "polished": "^2.2.0",
    "react-inlinesvg": "^0.8.4",
    "react-popper-tooltip": "^2.10.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@emotion/core": "^0.13.1",
    "@storybook/addon-a11y": "^5.1.8",
    "@storybook/addon-info": "^5.1.8",
    "@storybook/addon-viewport": "^5.1.8",
    "@storybook/addons": "^5.1.8",
    "@storybook/react": "^5.1.8",
    "@storybook/theming": "^5.1.8",
    "@types/faker": "^4.1.4",
    "@types/jest": "^23.3.2",
    "@types/react": "^16.4.18",
    "@types/storybook__addon-info": "^4.1.2",
    "@types/storybook__addon-options": "^4.0.2",
    "@types/storybook__react": "^4.0.2",
    "@types/styled-components": "^4.0.2",
    "babel-loader": "^8.0.4",
    "coveralls": "^3.0.2",
    "eslint": "^5.16.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "faker": "^4.1.0",
    "husky": "^1.1.2",
    "jest": "^24.3.1",
    "jest-dom": "^2.0.5",
    "lint-staged": "^7.2.2",
    "mutationobserver-shim": "^0.3.3",
    "prettier": "^1.14.2",
    "prop-types": "^15.0.0",
    "react": "^16.8.6",
    "react-docgen-typescript-loader": "^3.1.0",
    "react-dom": "^16.8.6",
    "react-testing-library": "^5.0.1",
    "rimraf": "^3.0.0",
    "rollup": "^0.66.1",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.17.0",
    "rollup-plugin-url": "^2.0.1",
    "storybook-styled-components": "^1.1.4",
    "styled-components": "^4.3.1",
    "stylelint": "^9.5.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.2",
    "ts-jest": "^24.0.0",
    "ts-loader": "^5.2.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-react": "^3.6.0",
    "typeface-lato": "^0.0.54",
    "typeface-roboto-mono": "^0.0.54",
    "typescript": "^3.0.1",
    "typescript-eslint-parser": "^20.0.0",
    "webpack": "^3.0.0"
  },
  "peerDependencies": {
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "styled-components": "^4.0.2"
  },
  "scripts": {
    "build": "build-storybook",
    "build:rollup:es": "rollup -c --file dist/es/index.js --dir dist/es",
    "build:rollup:cjs": "rollup -c --format cjs --file dist/cjs/index.js --dir dist/cjs",
    "clean": "rimraf ./dist",
    "prepare": "yarn clean && yarn build:rollup:cjs && yarn build:rollup:es",
    "report-coverage": " cat ./coverage/lcov.info | coveralls",
    "start": "start-storybook",
    "test": "jest",
    "watch": "rollup -c -w"
  },
  "sideEffects": false,
  "eslintConfig": {
    "extends": [
      "plugin:import/recommended",
      "plugin:jsx-a11y/recommended"
    ],
    "parser": "typescript-eslint-parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "import",
      "jsx-a11y",
      "react"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "ignorePackages"
      ],
      "import/first": "error",
      "import/named": "off",
      "import/newline-after-import": "error",
      "import/no-amd": "error",
      "import/no-commonjs": "error",
      "import/no-cycle": "error",
      "import/no-extraneous-dependencies": "error",
      "import/no-mutable-exports": "error",
      "import/no-named-as-default-member": "error",
      "import/no-named-default": "error",
      "import/no-nodejs-modules": "error",
      "import/no-relative-parent-imports": "error",
      "import/no-self-import": "error",
      "import/no-unassigned-import": [
        "error",
        {
          "allow": [
            "jest-dom/extend-expect",
            "react-testing-library/cleanup-after-each"
          ]
        }
      ],
      "import/no-unresolved": "off",
      "import/no-useless-path-segments": "error",
      "import/prefer-default-export": "error",
      "react/destructuring-assignment": "error",
      "jsx-a11y/label-has-for": [
        "error",
        {
          "required": "id"
        }
      ]
    }
  },
  "eslintIgnore": [
    "dist"
  ],
  "jest": {
    "collectCoverage": true,
    "moduleNameMapper": {
      "\\.svg$": "<rootDir>/__mocks__/fileMock.ts"
    },
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "dist"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && tsc --noEmit && yarn test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --ext js,jsx,ts,tsx",
      "stylelint",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "useTabs": false,
    "semi": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-styled-components",
      "stylelint-config-prettier"
    ],
    "rules": {
      "block-no-empty": null,
      "color-named": "always-where-possible",
      "declaration-no-important": true,
      "font-family-name-quotes": "always-where-recommended",
      "font-weight-notation": "named-where-possible",
      "max-nesting-depth": 1,
      "unit-whitelist": [
        "%",
        "px",
        "em",
        "rem"
      ]
    }
  }
}
